                "exec": [
                  "// ===============================",
                  "// 0. GET EXPECTED STATUS (Smart Fallback)",
                  "// ===============================",
                  "",
                  "// Priority:",
                  "// 1️⃣ JSON data file",
                  "// 2️⃣ Environment variable",
                  "// 3️⃣ Default = 200",
                  "",
                  "let expectedStatus =",
                  "    pm.iterationData.get(\"expectedStatus\") ||",
                  "    pm.environment.get(\"expectedStatus\") ||",
                  "    200;",
                  "",
                  "expectedStatus = parseInt(expectedStatus);",
                  "",
                  "if (isNaN(expectedStatus)) {",
                  "    throw new Error(\"Invalid expectedStatus value\");",
                  "}",
                  "",
                  "console.log(\"Expected Status:\", expectedStatus);",
                  "",
                  "",
                  "// ===============================",
                  "// 1. PARSE RESPONSE SAFELY",
                  "// ===============================",
                  "let jsonData;",
                  "",
                  "try {",
                  "    jsonData = pm.response.json();",
                  "} catch (e) {",
                  "    throw new Error(\"Response is not valid JSON\");",
                  "}",
                  "",
                  "",
                  "// ===============================",
                  "// 2. STATUS CODE VALIDATION",
                  "// ===============================",
                  "pm.test(\"Status code validation\", function () {",
                  "    pm.response.to.have.status(expectedStatus);",
                  "});",
                  "",
                  "",
                  "// ===============================",
                  "// 3. SUCCESS CASE (200)",
                  "// ===============================",
                  "if (expectedStatus === 200) {",
                  "",
                  "    // ---- Required Fields ----",
                  "    pm.test(\"Response contains required fields\", function () {",
                  "        const requiredFields = [",
                  "            \"token\",\"refreshToken\",\"changePassword\",\"userType\",",
                  "            \"parentId\",\"resellerId\",\"merchantId\",",
                  "            \"timeZone\",\"loginTime\",\"country\",",
                  "            \"resellerLevel\",\"changedPasswordOn\",\"isAdminRole\"",
                  "        ];",
                  "",
                  "        requiredFields.forEach(field => {",
                  "            pm.expect(jsonData).to.have.property(field);",
                  "        });",
                  "    });",
                  "",
                  "    // ---- Token Validation ----",
                  "    pm.test(\"Token is non-empty string\", function () {",
                  "        pm.expect(jsonData.token).to.be.a(\"string\").and.not.empty;",
                  "    });",
                  "",
                  "  ",
                  "",
                  "",
                  "  ",
                  "",
                  "  ",
                  "",
                  "    // ---- Store Environment Variables ----",
                  "    pm.environment.set(\"token\", jsonData.token);",
                  "    pm.environment.set(\"refresh_Token\", jsonData.refreshToken);",
                  "    pm.environment.set(\"env_Parentid\", jsonData.parentId);",
                  "    pm.environment.set(\"env_Resellerid\", jsonData.resellerId);",
                  "    pm.environment.set(\"env_merchantId\", jsonData.merchantId);",
                  "",
                  "    pm.test(\"Environment variables set correctly\", function () {",
                  "        pm.expect(pm.environment.get(\"token\")).to.eql(jsonData.token);",
                  "    });",
                  "",
                  "}",
                  "",
                  "",
                  "// ===============================",
                  "// 4. FAILURE CASE (400)",
                  "// ===============================",
                  "if (expectedStatus === 400) {",
                  "",
                  "    pm.test(\"Error message validation\", function () {",
                  "        pm.expect(jsonData).to.have.property(\"message\");",
                  "        pm.expect(jsonData.message).to.eql(\"Key_CheckYourCredentials\");",
                  "    });",
                  "",
