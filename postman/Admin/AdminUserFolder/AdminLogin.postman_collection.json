              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData = pm.response.json();",
                  "",
                  "// Store values in environment variables",
                  "pm.environment.set(\"env_merchantAccessKey\", jsonData.accessKey);",
                  "pm.environment.set(\"env_publicKey\", jsonData.paymentToken);",
                  "",
                  "// Validate status code",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Validate paymentToken exists and is not empty",
                  "pm.test(\"paymentToken is present and not empty\", function () {",
                  "    pm.expect(jsonData.paymentToken).to.exist;",
                  "    pm.expect(jsonData.paymentToken).to.be.a('string');",
                  "    pm.expect(jsonData.paymentToken).to.not.be.empty;",
                  "});",
                  "",
                  "// Validate accessKey exists and is not empty",
                  "pm.test(\"accessKey is present and not empty\", function () {",
                  "    pm.expect(jsonData.accessKey).to.exist;",
                  "    pm.expect(jsonData.accessKey).to.be.a('string');",
                  "    pm.expect(jsonData.accessKey).to.not.be.empty;",
                  "});"
                ],
